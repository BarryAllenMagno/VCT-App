@model IEnumerable<Notepad>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container" style="width:40rem; ">
    <div class="row pt-4 mb-3 d-flex justify-content-center">
        <div class="col-6">
            <h2 class="text-info">Notepad List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Notepad" asp-action="Create" class="btn btn-success">
                Add new notepad &nbsp; <i class="bi bi-plus-circle-fill"></i>
            </a>
        </div>
    </div>
</div>
<div class="container d-flex justify-content-center">
    <div class="row">
        <div class="col-sm">
            @foreach (var obj in Model)
            {
                <div class="card mb-3" style="width: 40rem;" >
                    <div class="card-body">
                        <h5 class="card-title text-info">@obj.Title</h5>
                        <p class="card-text">@obj.Content</p>
                        <p class="text-muted fw-light">@obj.CreatedDateTime</p>
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-info" asp-controller="Notepad" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i></a>
                            <a class="btn btn-danger" asp-controller="Notepad" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>